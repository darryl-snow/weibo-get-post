.tile
	width				100%
	background 			white
	box-shadow 			0 1px 1px rgba(black, 0.2)
	margin				0 auto $spacing 0
	opacity				0
	padding 			$spacing * 0.5
	position 			relative
	transition			0.3s all ease-in-out

	@media $lap
		width			50%

	&.loaded
		opacity			1

	&-header
		font-size 		0.9em
		line-height 	44px

	&-footer
		border-top		1px solid #d6d6d6
		font-size		0.875em
		line-height		48px
		padding-top		20px
		margin			20px auto 0 auto
		text-align		center
		width			70%

	&-share
		float			right
		margin-right	16px

	&-cite
		group()
		display 		block
		margin 			0 auto
		width 			70%

	&-cite-above
		border-bottom	1px solid #d6d6d6
		padding-bottom	20px
		margin-bottom	20px

	&-cite-below
		border-top		1px solid #d6d6d6
		padding-top		20px
		margin-top		20px
		text-align		center

	&-source
		group()
		height 			42px
		display 		inline-block
		font-style 		normal
		line-height 	1.3
		padding-left 	200px
		position 		relative
		left 			50%
		width 			auto
		height 			180px
		z-index 		1
		-webkit-transform 	translateX(-50%)
		-ms-transform 	translateX(-50%)
		transform 		translateX(-50%)

	&-source-name
		color 			#08c
		display			block
		font-weight		500
		white-space		nowrap
		font-size		1.125em

	&-source-username
		display			block
		font-size		0.8125em

	&-source-image
		border-radius	100%
		margin			$spacing

	&-copy
		font-size		1.375em
		line-height		1.3
		font-weight		200
		margin			0 auto
		text-align		center
		
	&-postid,
	&-post-URL
		font-size		1em
		line-height		1.3
		font-weight		200
		margin			0 auto
		text-align		left

	&-user-details
		position		relative
		top				50%
		transform		translateY(-50%)

	&-link
		line-height 	1.55
		margin-left 	0
		font-size 		0.875em

		&:after
			background 	url("http://www.apple.com/live/images/weibo.svg") center center no-repeat
			background-size 	contain
			content 	""
			display 	inline-block
			width 		2.8667em
			height 		2.1333em

	&-share-links
		unstyled-list()

	&-share-link
		float			left
		margin-left		22px !important

	&-share-links a
		color 			#d6d6d6
		font-size 		1em
		-webkit-transition 	color 300ms ease
		transition 		color 300ms ease

		+ActiveFocusHover()
			color 		$link-colour

	&-image
		margin-bottom 	$spacing
		
	table
		text-align		left